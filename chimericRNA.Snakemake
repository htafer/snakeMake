HOME=os.environ['HOME']
WORKDIR="/media/work/genomes/claImm/RNAseq/diffExp/chimericRNAs"
COMPUTEDIR="/tmp"


    #################################                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        
    #THREADS                        #                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        
