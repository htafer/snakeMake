#GENOME                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
SPEC="claImm"
GENOME=WORKDIR+"/"+SPEC+".fasta"
ANNO  =WORKDIR+"/"+SPEC+".Protein.gtf"
junction =WORKDIR+"/{condition}Chimeric.out.junction"
JUNCTIONS,=glob_wildcards(junction);


    ##################################                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       
    #BIOLOGY                         #                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       
